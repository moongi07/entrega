<h1 class="text-center my-4" >Tu Carrito</h1>

<% if (productos.length > 0) { %>
    <table class="table table-striped table-hover" style="max-width: 50%;margin: auto;">
        <thead>
            <tr>
                <th style="width: 40%;">Producto</th> 
                <th style="width: 20%;">Precio</th>   
                <th style="width: 10%;" class="text-center">Cantidad</th>
                <th style="width: 30%;">Acción</th>   
            </tr>
        </thead>
        <tbody>
            <% productos.forEach(producto => { %>
                <tr>
                    <td><%= producto.nombre %></td>
                    <td><%= producto.precio %>€</td>
                    <td class="text-center"><%= producto.cantidad %></td>
                    <td>
                        <form action="/eliminarproducto" method="POST" style="display:inline;">
                            <input type="hidden" name="producto_id" value="<%= producto.producto_id %>">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <div class="mx-5">
        <a href="/pago" class="btn btn-success">Proceder al Pago</a>
    </div>

<% } else { %>
    <div class="alert alert-info" role="alert">
        <%= mensaje %>
    </div>
<% } %>
